<div class="show d-flex justify-content-evenly">
  <div class= "show_image col-3">
    <% if @product.image.presence %>
      <%= image_tag @product.image %>
    <% else %>
      <%= image_tag "27439.png" %>
    <% end %>
  </div>
  
  <div class="user_product_table">
    <table class="table">
      <tbody>
        <%= render "/layouts/common_material_show_tbody", material: @product %>
        <tr>
          <th scope="col"><%= Constants::APP %></th>
          <td><%= @product.app %></td>
        </tr>
        <tr>
          <th scope="col"><%= Constants::JUICY %></th>
          <td><%= @product.juicy %></td>
        </tr>
        <tr>
          <th scope="col"><%= Constants::TASTE %></th>
          <td><%= @product.taste %></td>
        </tr>
        <tr>
          <th scope="col"><%= Constants::SMELL %></th>
          <td><%= @product.smell %></td>
        </tr>
        <tr>
          <th scope="col">焼き方</th>
          <td><%= @product.bake.name, bake_path(:bake_id) %></td>
        </tr>
        <tr>
          <th scope="col">切り方</th>
          <td><%= @product.cut.name, cut_path(:cut_id) %></td>
        </tr>
        <tr>
          <th scope="col">その他の工法</th>
          <td><%= link_to @product.otherMethod.name, other_method_path(:other_method_id) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="submit<%= ' no_permitted_user' if @product.user_id != current_user.id %>"></div>
  <%= link_to "情報の変更", edit_product_path, class:"btn btn-primary text-right float-end my-4" %>
</div>
<div class="clear"></div>
