<h2 class="mb-4">粉末材料登録</h2>
  <table class="table">  
    <tbody>
      <%= render "/layouts/common_material_form", f: f %>
      <tr>
          <th scope="row"><%= Constants::PARTICLE_SIZE %></th>
          <td><%= f.text_field :particle_size, autofocus: true, class: "form-control" %></td>
          <td class="align-bottom text-start">nm</td>
        </tr>
        <tr>
          <th scope="row"><%= Constants::DENSITY %></th>
          <td><%= f.text_field :density, autofocus: true, class: "form-control" %></td>
          <td class="align-bottom text-start">g/cm3</td>
        </tr>
        <tr>
          <th scope="row"><%= Constants::SSA %></th>
          <td><%= f.text_field :ssa, autofocus: true, class: "form-control" %></td>
          <td class="align-bottom text-start">m2/g</td>
        </tr>
    </tbody>
  </table>
  <%= f.submit "登録", class: "btn btn-primary float-end", id: "submit" %>
<div class="clear"></div>