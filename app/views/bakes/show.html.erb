<div class="show d-flex justify-content-evenly">
  <div class= "show_image col-6">
    <%= render "/layouts/refactoring/no_image", anything: @bake %>
  </div>
  <div class="user_technique_table">
    <table class="table">
      <tbody>
        <%= render "/layouts/refactoring/common_technique_show_tbody", technique: @bake %>
        <tr>
          <th scope="col"><%= Constants::TEMP %></th>
          <td><%= @bake.temp %>℃</td>
        </tr>
        <tr>
          <th scope="col"><%= Constants::TIME %></th>
          <td><%= @bake.time %>h</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="submit<%= ' no_permitted_user' if @bake.user_id != current_user.id %>">
  <%= link_to "情報の変更", edit_bake_path, class:"btn btn-primary text-right float-end my-4" %>
</div>
<div class="clear"></div>
<%= render "/layouts/refactoring/comment/comment_list", anything: @bake %>
<div class="comment_form">
  <%= form_with url: {controller: 'comments', action: 'create'},local:true, method: :post do |f| %>
    <%= f.text_area :comment, autofocus: true, class: "form-control", placeholder: "ここにコメントを記入" %>
    <%= f.hidden_field :bake_id, :value => @bake.id %>
    <%= f.submit "投稿する", class: "btn btn-primary float-end mt-5" %>
    <div class="clear"></div>
  <% end %>
</div>
