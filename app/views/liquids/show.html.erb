<div class="show d-flex">
  <div class= "show_image" style="width:60%;">
    <% if @liquid.image.presence %>
      <%= image_tag @liquid.image %>
    <% else %>
      <%= image_tag "27439.png" %>
    <% end %>
  </div>
  
  <div class="user_material_table">
    <table class="table">
      <tbody>
        <%= render "/layouts/common_material_show_tbody", material: @liquid %>
        <tr>
          <th scope="col"><%= Constants::DENSITY %></th>
          <td><%= @liquid.density %>g/cm3</td>
        </tr>
        <tr>
          <th scope="col"><%= Constants::VISCOSITY %></th>
          <td><%= @liquid.viscosity %>Pa・s</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<%= link_to "情報の変更", edit_liquid_path, class:"btn btn-primary text-right float-end my-4" %>
<div class="clear"></div>
