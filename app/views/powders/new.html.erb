<h2 class="mb-4">粉末材料登録</h2>
<div class="form">
  <table class="table">
    <%= form_with model: @powder, url: {controller: 'powders', action: 'create'},local:true, id: "powder", method: :post do |f| %>
      <tbody>
        <tr>
          <th scope="row"><%= Constants::NAME %></th>
          <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %></td>
        </tr>
        <tr>
          <th scope="row"><%= Constants::COST %></th>
          <td><%= f.text_field :cost, autofocus: true, class: "form-control" %></td>
          <td class="align-bottom text-start">円</td>
        </tr>
        <tr>
          <th scope="row"><%= Constants::IMAGE %></th>
          <td><%= f.file_field:image, class: "form-control" %></td>
        </tr>
        <tr>
          <th scope="row"><%= Constants::DESCRIPTION %></th>
          <td><%= f.text_area:description, class: "form-control" %></td>
        </tr>
        <tr>
          <th scope="row"><%= Constants::WARNING %></th>
          <td><%= f.text_area:warning, class: "form-control" %></td>
        </tr>
        <tr>
          <th scope="row"><%= Constants::PARTICLE_SIZE %></th>
          <td><%= f.text_field :particle_size, autofocus: true, class: "form-control" %></td>
          <td class="align-bottom text-start">nm</td>
        </tr>
        <tr>
          <th scope="row"><%= Constants::DENSITY %></th>
          <td><%= f.text_field :density, autofocus: true, class: "form-control" %></td>
          <td class="align-bottom text-start">g/cm3</td>
        </tr>
        <tr>
          <th scope="row"><%= Constants::SSA %></th>
          <td><%= f.text_field :ssa, autofocus: true, class: "form-control" %></td>
          <td class="align-bottom text-start">m2/g</td>
        </tr>
    <% end %>
  </table>
  <div class="text-right float-end">
    <button class="btn btn-primary" type="submit" form="powder">登録</button>
  </div>
</div>

